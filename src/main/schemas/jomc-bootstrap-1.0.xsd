  <!-- ************************************************************************************************************* -->
  <xsd:complexType name="BootstrapObject">
    <xsd:annotation>
      <xsd:documentation xml:lang="en">Base bootstrap object.</xsd:documentation>
    </xsd:annotation>
  </xsd:complexType>
  <!-- ************************************************************************************************************* -->
  <xsd:element name="schemas" type="bootstrap:Schemas">
    <xsd:key name="schema-system-id-key">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">System id key of a schema.</xsd:documentation>
      </xsd:annotation>
      <xsd:selector xpath="bootstrap:schema"/>
      <xsd:field xpath="@system-id"/>
    </xsd:key>
    <xsd:key name="schema-public-id-key">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Public id key of a schema.</xsd:documentation>
      </xsd:annotation>
      <xsd:selector xpath="bootstrap:schema"/>
      <xsd:field xpath="@public-id"/>
    </xsd:key>
  </xsd:element>
  <xsd:complexType name="Schemas">
    <xsd:annotation>
      <xsd:documentation xml:lang="en">List of schemas.</xsd:documentation>
    </xsd:annotation>
    <xsd:complexContent>
      <xsd:extension base="bootstrap:BootstrapObject">
        <xsd:sequence>
          <xsd:element ref="bootstrap:schema" minOccurs="0" maxOccurs="unbounded"/>
        </xsd:sequence>
      </xsd:extension>
    </xsd:complexContent>
  </xsd:complexType>
  <!-- ************************************************************************************************************* -->
  <xsd:element name="schema" type="bootstrap:Schema"/>
  <xsd:complexType name="Schema">
    <xsd:annotation>
      <xsd:documentation xml:lang="en">
Reference to a schema.

The 'Schema' type defines attributes 'public-id', 'system-id', 'context-id' and 'classpath-id'. Attribute 'public-id'
holds the public identifier of the referenced schema. Attribute 'system-id' holds the system identifier of the
referenced schema. Attribute 'context-id' holds the name of the Java package containing JAXB classes of the referenced
schema. Attribute 'classpath-id' holds the Java classpath location of the referenced schema.
      </xsd:documentation>
    </xsd:annotation>
    <xsd:complexContent>
      <xsd:extension base="bootstrap:BootstrapObject">
        <xsd:attribute name="public-id" type="bootstrap:Identifier" use="required"/>
        <xsd:attribute name="system-id" type="bootstrap:Identifier" use="required"/>
        <xsd:attribute name="context-id" type="bootstrap:Identifier" use="optional"/>
        <xsd:attribute name="classpath-id" type="bootstrap:Identifier" use="optional"/>
      </xsd:extension>
    </xsd:complexContent>
  </xsd:complexType>
  <!-- ************************************************************************************************************* -->
  <xsd:element name="services" type="bootstrap:Services">
    <xsd:key name="service-key">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Key of a service.</xsd:documentation>
      </xsd:annotation>
      <xsd:selector xpath="bootstrap:service"/>
      <xsd:field xpath="@identifier"/>
      <xsd:field xpath="@class"/>
    </xsd:key>
  </xsd:element>
  <xsd:complexType name="Services">
    <xsd:annotation>
      <xsd:documentation xml:lang="en">List of services.</xsd:documentation>
    </xsd:annotation>
    <xsd:complexContent>
      <xsd:extension base="bootstrap:BootstrapObject">
        <xsd:sequence>
          <xsd:element ref="bootstrap:service" minOccurs="0" maxOccurs="unbounded"/>
        </xsd:sequence>
      </xsd:extension>
    </xsd:complexContent>
  </xsd:complexType>
  <!-- ************************************************************************************************************* -->
  <xsd:element name="service" type="bootstrap:Service"/>
  <xsd:complexType name="Service">
    <xsd:annotation>
      <xsd:documentation xml:lang="en">Service.</xsd:documentation>
    </xsd:annotation>
    <xsd:complexContent>
      <xsd:extension base="bootstrap:BootstrapObject">
        <xsd:attribute name="ordinal" type="xsd:int" use="optional" default="1000"/>
        <xsd:attribute name="identifier" type="bootstrap:Identifier" use="required"/>
        <xsd:attribute name="class" type="bootstrap:Identifier" use="required"/>
      </xsd:extension>
    </xsd:complexContent>
  </xsd:complexType>
  <!-- ************************************************************************************************************* -->
  <xsd:simpleType name="Identifier">
    <xsd:restriction base="xsd:token"/>
  </xsd:simpleType>
</xsd:schema>
