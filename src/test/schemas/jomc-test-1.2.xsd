]]>
    </xsd:documentation>
  </xsd:annotation>
  <!--                                                                                                               -->
  <!-- TestSuite                                                                                                     -->
  <!--                                                                                                               -->
  <xsd:element name="testsuite" type="test:TestSuite">
    <xsd:unique name="schema-constraints-test-uniqueness">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Checks uniqueness of schema constraints tests.</xsd:documentation>
      </xsd:annotation>
      <xsd:selector xpath="test:schema-constraints-test"/>
      <xsd:field xpath="@identifier"/>
    </xsd:unique>
    <xsd:unique name="modules-constraints-test-uniqueness">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Checks uniqueness of modules constraints tests.</xsd:documentation>
      </xsd:annotation>
      <xsd:selector xpath="test:modules-constraints-test"/>
      <xsd:field xpath="@identifier"/>
    </xsd:unique>
    <xsd:unique name="modules-constraints-test-details-uniqueness">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Checks uniqueness of modules constraints tests details.</xsd:documentation>
      </xsd:annotation>
      <xsd:selector xpath="test:modules-constraints-test/test:detail"/>
      <xsd:field xpath="@identifier"/>
    </xsd:unique>
    <xsd:unique name="implementation-test-uniqueness">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Checks uniqueness of implementation tests.</xsd:documentation>
      </xsd:annotation>
      <xsd:selector xpath="test:implementation-test"/>
      <xsd:field xpath="@identifier"/>
    </xsd:unique>
    <xsd:unique name="instance-test-uniqueness">
      <xsd:annotation>
        <xsd:documentation xml:lang="en">Checks uniqueness of instance tests.</xsd:documentation>
      </xsd:annotation>
      <xsd:selector xpath="test:instance-test"/>
      <xsd:field xpath="@identifier"/>
    </xsd:unique>
  </xsd:element>
  <xsd:complexType name="TestSuite">
    <xsd:annotation>
      <xsd:appinfo>
        <jaxb:class>
          <jaxb:javadoc>List of tests.</jaxb:javadoc>
        </jaxb:class>
      </xsd:appinfo>
    </xsd:annotation>
    <xsd:sequence>
      <xsd:element name="schema-constraints-test" type="test:SchemaConstraintsTestType" minOccurs="0" maxOccurs="unbounded"/>
      <xsd:element name="modules-constraints-test" type="test:ModulesConstraintsTestType" minOccurs="0" maxOccurs="unbounded"/>
      <xsd:element name="implementation-test" type="test:ImplementationTestType" minOccurs="0" maxOccurs="unbounded"/>
      <xsd:element name="instance-test" type="test:InstanceTestType" minOccurs="0" maxOccurs="unbounded"/>
    </xsd:sequence>
  </xsd:complexType>
  <!--                                                                                                               -->
  <!-- SchemaConstraintTest                                                                                          -->
  <!--                                                                                                               -->
  <xsd:complexType name="SchemaConstraintsTestType">
    <xsd:annotation>
      <xsd:appinfo>
        <jaxb:class>
          <jaxb:javadoc>Schema validation test.</jaxb:javadoc>
        </jaxb:class>
      </xsd:appinfo>
    </xsd:annotation>
    <xsd:sequence>
      <xsd:element name="model-object" type="test:AnyModelObject" minOccurs="0"
                   maxOccurs="1"/>
    </xsd:sequence>
    <xsd:attribute name="identifier" type="xsd:string" use="required">
      <xsd:annotation>
        <xsd:appinfo>
          <jaxb:property>
            <jaxb:javadoc>Identifier of this test.</jaxb:javadoc>
          </jaxb:property>
        </xsd:appinfo>
      </xsd:annotation>
    </xsd:attribute>
  </xsd:complexType>
  <!--                                                                                                               -->
  <!-- ModulesConstraintsTest                                                                                        -->
  <!--                                                                                                               -->
  <xsd:complexType name="ModulesConstraintsTestType">
    <xsd:annotation>
      <xsd:appinfo>
        <jaxb:class>
          <jaxb:javadoc>Modules validation test.</jaxb:javadoc>
        </jaxb:class>
      </xsd:appinfo>
    </xsd:annotation>
    <xsd:sequence>
      <xsd:element name="modules" type="test:AnyModelObject" minOccurs="0"
                   maxOccurs="1"/>
      <xsd:element name="detail" type="test:ModelValidationReportDetail" minOccurs="0"
                   maxOccurs="unbounded"/>
    </xsd:sequence>
    <xsd:attribute name="identifier" type="xsd:string" use="required">
      <xsd:annotation>
        <xsd:appinfo>
          <jaxb:property>
            <jaxb:javadoc>Identifier of this test.</jaxb:javadoc>
          </jaxb:property>
        </xsd:appinfo>
      </xsd:annotation>
    </xsd:attribute>
  </xsd:complexType>
  <!--                                                                                                               -->
  <!-- ImplementationTest                                                                                            -->
  <!--                                                                                                               -->
  <xsd:complexType name="ImplementationTestType">
    <xsd:annotation>
      <xsd:appinfo>
        <jaxb:class>
          <jaxb:javadoc>Implementation test.</jaxb:javadoc>
        </jaxb:class>
      </xsd:appinfo>
    </xsd:annotation>
    <xsd:sequence>
      <xsd:element name="modules" type="test:AnyModelObject" minOccurs="0"
                   maxOccurs="1"/>
      <xsd:element name="implementation" type="test:AnyModelObject"
                   minOccurs="1" maxOccurs="1"/>
    </xsd:sequence>
    <xsd:attribute name="identifier" type="xsd:string" use="required">
      <xsd:annotation>
        <xsd:appinfo>
          <jaxb:property>
            <jaxb:javadoc>Identifier of this test.</jaxb:javadoc>
          </jaxb:property>
        </xsd:appinfo>
      </xsd:annotation>
    </xsd:attribute>
  </xsd:complexType>
  <!--                                                                                                               -->
  <!-- InstanceTest                                                                                            -->
  <!--                                                                                                               -->
  <xsd:complexType name="InstanceTestType">
    <xsd:annotation>
      <xsd:appinfo>
        <jaxb:class>
          <jaxb:javadoc>Instance test.</jaxb:javadoc>
        </jaxb:class>
      </xsd:appinfo>
    </xsd:annotation>
    <xsd:sequence>
      <xsd:element name="modules" type="test:AnyModelObject" minOccurs="0"
                   maxOccurs="1"/>
      <xsd:element name="instance" type="test:AnyModelObject"
                   minOccurs="1" maxOccurs="1"/>
    </xsd:sequence>
    <xsd:attribute name="identifier" type="xsd:string" use="required">
      <xsd:annotation>
        <xsd:appinfo>
          <jaxb:property>
            <jaxb:javadoc>Identifier of this test.</jaxb:javadoc>
          </jaxb:property>
        </xsd:appinfo>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="implementationIdentifier" type="xsd:string" use="required">
      <xsd:annotation>
        <xsd:appinfo>
          <jaxb:property>
            <jaxb:javadoc>Identifier of the implementation to test an instance of.</jaxb:javadoc>
          </jaxb:property>
        </xsd:appinfo>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="dependencyName" type="xsd:string" use="optional">
      <xsd:annotation>
        <xsd:appinfo>
          <jaxb:property>
            <jaxb:javadoc>Name of the dependency of the implementation to test an instance of.</jaxb:javadoc>
          </jaxb:property>
        </xsd:appinfo>
      </xsd:annotation>
    </xsd:attribute>
  </xsd:complexType>
  <!--                                                                                                               -->
  <!-- AnyModelObject                                                                                                -->
  <!--                                                                                                               -->
  <xsd:complexType name="AnyModelObject">
    <xsd:sequence>
      <xsd:any namespace="http://jomc.org/model" minOccurs="0" maxOccurs="1"
               processContents="lax"/>
    </xsd:sequence>
    <xsd:attribute name="valid" type="xsd:boolean" use="required">
      <xsd:annotation>
        <xsd:appinfo>
          <jaxb:property>
            <jaxb:javadoc>Flag indicating the model object is expected to be valid.</jaxb:javadoc>
          </jaxb:property>
        </xsd:appinfo>
      </xsd:annotation>
    </xsd:attribute>
  </xsd:complexType>
  <!--                                                                                                               -->
  <!-- ModelValidationReportDetail                                                                                   -->
  <!--                                                                                                               -->
  <xsd:complexType name="ModelValidationReportDetail">
    <xsd:attribute name="identifier" type="xsd:string" use="required">
      <xsd:annotation>
        <xsd:appinfo>
          <jaxb:property>
            <jaxb:javadoc>Identifier of the detail.</jaxb:javadoc>
          </jaxb:property>
        </xsd:appinfo>
      </xsd:annotation>
    </xsd:attribute>
    <xsd:attribute name="count" type="xsd:int" use="required">
      <xsd:annotation>
        <xsd:appinfo>
          <jaxb:property>
            <jaxb:javadoc>Number of expected details with {@code identifier}.</jaxb:javadoc>
          </jaxb:property>
        </xsd:appinfo>
      </xsd:annotation>
    </xsd:attribute>
  </xsd:complexType>
</xsd:schema>
